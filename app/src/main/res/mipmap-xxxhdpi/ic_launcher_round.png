<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoreversa"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_flecha_hacia_la_izquierda"
                    android:foregroundGravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="8dp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:textStyle="bold|italic"
                    android:text="@string/Pedidos"
                    android:gravity="center_horizontal" />



            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:background="#fff"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="15px"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Cliente"
                        android:layout_marginTop="5dp"
                        android:textSize="19sp"
                        android:fontFamily="@font/mo_re"
                        />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:fontFamily="@font/mo_re"
                        android:drawableLeft="@drawable/ic_baseline_search_24"
                        android:hint="@string/BuscarCliente"
                        android:imeOptions="actionDone|actionSend"
                        android:inputType="text"
                        android:paddingHorizontal="10dp"
                        android:singleLine="true"
                        android:textAlignment="textStart"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Descripccion"
                        android:layout_marginTop="10dp"
                        android:textSize="19sp"
                        android:fontFamily="@font/mo_re"
                        />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteDescripccion"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/ic_baseline_search_24"
                        android:hint="@string/BuscarProducto"
                        android:fontFamily="@font/mo_re"
                        android:imeOptions="actionDone|actionSend"
                        android:inputType="text"
                        android:paddingHorizontal="10dp"
                        android:singleLine="true"
                        android:textAlignment="textStart"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/configProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ConfiguraciÃ³n de producto"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/mo_re"
                        android:textSize="19sp"
                        android:visibility="gone"

                        />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardsPedidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@color/colorPrimary"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:id="@+id/linearLayoutInformationRoute"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"

                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">


                            <LinearLayout
                                android:layout_width="209dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:orientation="vertical">




                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/textInputDireccion"
                                    style="@style/parent"
                                    >
                                    <EditText
                                        android:id="@+id/CantidadPrducto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="number"
                                        android:fontFamily="@font/mo_re"
                                        android:hint="Cantidad del producto"
                                        android:textSize="19sp" />
                                </com.google.android.material.textfield.TextInputLayout>


                                    <TextView
                                        android:id="@+id/nameProducto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/mo_re"
                                        android:text="AMBIENTADOR 80ml (tabaco cubano)"
                                        android:textSize="19sp" />



                                <TextView
                                    android:id="@+id/Valorproducto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="$5.366"
                                    android:fontFamily="@font/mo_re"
                                    android:textSize="19sp" />


                                <TextView
                                    android:id="@+id/ValorproductoTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Valor total a calcular"
                                    android:fontFamily="@font/mo_re"
                                    android:textSize="19sp" />


                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp">

                                <ImageView
                                    android:id="@+id/imgCheck"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_baseline_check_circle_24"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <ImageView
                                    android:id="@+id/imgDelete"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_baseline_highlight_off_24"
                                    app:layout_constraintStart_toEndOf="@+id/imgCheck"
                                    tools:ignore="MissingConstraints" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/listaProductos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lista de productos"
                        android:layout_marginTop="10dp"
                        android:textSize="19sp"
                        android:fontFamily="@font/mo_re"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="12"
                        android:gravity="center"
                       >



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPedidos"
                            android:layout_width="match_parent"
                            android:layout_height="355dp"
                            android:visibility="gone"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:nestedScrollingEnabled="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/escogerNumeral" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textValorTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mo_re"
                        android:gravity="top|left"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        android:hint="@string/ValorTotal"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:scrollHorizontally="false"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:id="@+id/linearcheckbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10px"
                        android:gravity="start"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="12">

                        <RadioGroup
                            android:id="@+id/radioGroupTipoLugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rbcredito"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/mo_re"
                                android:text="@string/credito"
                                android:textSize="19sp" />


                            <RadioButton
          